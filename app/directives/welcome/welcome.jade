gs-status-bar(ng-model='dm.state.connection')
div.container-fluid
  div.row
    div.col-md-6.col-md-push-3
      div.welcome
        h1.welcome__title
          span(ng-if='dm.state.connection.error') Something went wrong while bootstrapping the {{ dm.title }}
          span(ng-if='dm.state.connection.success') Time to get crackin' on the {{ dm.title }}
        form
          <select data-ng-model="dm.chosenHero" data-ng-options="hero.name for hero in dm.heroes"></select>

        button.btn.btn-primary(ng-click="dm.getOneCharacter(dm.chosenHero.id)" ) Select
        br
        img(src='{{dm.character.thumbnail.path}}/standard_xlarge.jpg')
        h3 {{dm.character.name}} 
